{
  "name": "flutter-dependency-analyzer",
  "displayName": "Flutter Dependency Analyzer",
  "description": "This extension checks for unused dependencies, outdated dependencies, and provides health scores for each dependency found in the `pubspec.yaml` file.",
  "version": "0.0.1",
  "publisher": "Hwassef",
  "enabledApiProposals": ["findTextInFiles", "findTextInFilesNew", "fileSearchProviderNew", "findFiles2", "findFiles2New"],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hwassef/Flutter-Dependecy-Analyzer.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "onLanguage:yaml",
    "workspaceContains:pubspec.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
  "views": {
    "explorer": [
        {
            "id": "flutterDependencies",
            "name": "Flutter Dependencies"
        }
    ]
},

    "commands": [
      {
        "command": "extension.listFlutterDependencies",
        "title": "Flutter: List Dependencies",
        "category": "Flutter"
      },
      {
        "command": "extension.checkOutdatedDependencies",
        "title": "Flutter: Check Outdated Dependencies",
        "category": "Flutter"
      },
      {
        "command": "extension.checkUnusedDependencies",
        "title": "Flutter: Check Unused Dependencies",
        "category": "Flutter"
      },
      {
        "command": "extension.listFlutterDependenciesWithHealth",
        "title": "Flutter: List Dependencies with Health Scores",
        "category": "Flutter"
      },
      {
        "command": "extension.analyzeFlutterDependencies",
        "title": "Flutter: Analyze All Dependencies",
        "category": "Flutter"
      },
      {
        "command": "extension.listFlutterDependenciesWithUsage",
        "title": "List Flutter Dependencies and Usage",
        "category": "Flutter"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.listFlutterDependencies"
        },
        {
          "command": "extension.checkOutdatedDependencies"
        },
        {
          "command": "extension.checkUnusedDependencies"
                },
        {
          "command": "extension.listFlutterDependenciesWithHealth"
                },
        {
          "command": "extension.analyzeFlutterDependencies"
                
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.6.1",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.9",
    "@types/node": "^16.18.113",
    "@types/node-fetch": "^2.6.1",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.7.4"
  }
}